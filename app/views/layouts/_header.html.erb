<div class="header">
  <div class="container">
    <%= link_to "#", id: "logo" do %>
      <i class="fas fa-clinic-medical"></i>
      <%= t ".medical_record" %>
    <% end %>
    <span id="phone_number">
      <%= t ".phone" %>
    </span>
    <span class="top-icon">
      <i class="fas fa-phone"></i>
    </span>
  </div>
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to t(".home"), root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".doctors"), doctors_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".services"), services_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".departments"), departments_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".contact"), contact_path, class: "nav-link" %>
      </li>
    </ul>
    <ul class="navbar-nav">
      <% if logged_in? %>
        <li class="nav-item">
          <%= link_to patient_path(current_account), class: "nav-link" do %>
            <i class="fas fa-user"></i>
            <%= current_account.name %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to logout_path, method: :delete, class: "nav-link" do %>
            <i class="fas fa-sign-out-alt"></i>
            <%= t ".sign_out" %>
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to signup_path, class: "nav-link" do %>
            <i class="fas fa-user-plus"></i>
            <%= t ".signup" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to login_path, class: "nav-link" do %>
            <i class="fas fa-sign-in-alt"></i>
            <%= t ".login" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
