<% if current_account.doctor? %>
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center colorlib-heading">
      <%= form_tag(patients_path, method: :get, class: "navbar-form navbar-left") do %>
          <div class="form-group row">
            <div class="col-md-11 text-center colorlib-heading">
              <%= search_field_tag :search, params[:search], placeholder: t(".search"), class: "form-control" %>
            </div>
            <div class="col-md-1 text-center colorlib-heading">
              <%= button_tag type: "submit", class: "button my-button", id: "search-button" do %>
                <i class="fas fa-search"></i>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-md-6 offset-md-3 text-center colorlib-heading">
    <h2 id="patient-information"><%= t ".doc_infor" %></h2>
  </div>
</div>
<section class="home_banner_area">
  <div class="container box_1620">
    <div class="banner_inner d-flex align-items-center">
      <div class="banner_content">
        <div class="media">
          <div class="d-flex">
            <%= image_tag @doctor.image %>
          </div>
          <div class="media-body">
            <div class="personal_text">
              <h1><%= @doctor.name %></h1>
              <ul class="list basic_info">
                <li>
                  <i class="fas fa-birthday-cake"></i>
                  <%= @doctor.specialist %>
                </li>
                <li>
                  <i class="fas fa-phone-alt"></i>
                  <%= @doctor.phone_number %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="row">
  <div class="col-md-6 offset-md-3 text-center colorlib-heading">
    <h2><%= t ".appointment" %></h2>
  </div>
</div>
<% if @doctor.appointments.any? %>
  <ol>
    <%= render @appointments %>
  </ol>
<% end %>
